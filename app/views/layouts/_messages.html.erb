<% if notice %>
  <p class="alert alert-success alert-dismissible">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </p>
<% end %>

<% if alert %>
  <p class="alert alert-danger alert-dismissible" role="alert">
    ⚠️ <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </p>
<% end %><br>
