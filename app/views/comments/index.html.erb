<p id="notice"><%= notice %></p>

<h1>Comments on <%= link_to @article.title, article_path(@article) %></h1>

<table>
  <thead>
    <tr>
      <th>Comments</th>
      <th>By</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= User.find(comment.user_id).email %></td>
        <td><%= time_ago_in_words(comment.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
