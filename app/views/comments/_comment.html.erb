<div class="rounded-pill single-comment">
  <strong>Comment by <%= User.find(comment.user_id).email %>:</strong>
  <p>
    <%= comment.content %>
  </p>
  <% if can? :destroy, comment %>
    <%= link_to 'Delete', [comment.article, comment], class: "btn btn-danger", :confirm => 'Are you sure?', :method => :delete %>
  <% end %>
</div>
<hr>

