<h4>Search articles</h4><hr>
<div class="container ">
  <%= search_form_for @search do |f| %>
    <div class="fields"> 
      <% f.condition_fields do |c| %>
        <% c.attribute_fields do |a| %>
          <% a.attribute_select %>
        <% end %>
        <% c.predicate_select %>
        <% c.value_fields do |v| %>
          <% v.text_field :value %>
        <% end %>
        <br>
      <% end %>
      <%= f.label :title_cont, "Title: " %>
      <div class="input-group" style="width: 700px"> 
        <%= f.search_field :title_cont, class: "form-control", placeholder: "type article title here" %>
        <%= f.submit "Search", class: "btn btn-sm btn-dark" %>
      </div>
    </div>
  <% end %>
  <br>
</div> 
<hr>
<%= link_to "Refresh all search", articles_path %>
<br>
<em>Showing <%= @articles.count %> article(s) out of <%= Article.all.count %></em>

