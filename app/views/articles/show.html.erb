<p id="notice"><%= notice %></p>

<p>
  <strong>Article category#<%= @article.category_id %>:</strong>
  <%= @categories.find(@article.category_id).category_name  %>
</p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<strong><%= @article.comments.count %> Comments <%= link_to "show", article_comments_path(@article) %></strong>
<div class="comments-list">
  <%= render @article.comments %>
</div>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
