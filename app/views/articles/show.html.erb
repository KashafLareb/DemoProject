<div class="article-header p-5 col-10">
  <h3><%= link_to "Categories", categories_path %> / <%= link_to @categories.find(@article.category_id).category_name, category_path(@article.category_id) %> / <%= link_to "Articles", articles_path %> / <%= @article.title %></h3>

  <p>
    <h5><span id="likes-count"><%= @article.likes.count %></span> Likes</h5>
    <%= render 'likes/form', article: @article %>
    <hr>
    <strong>Article Body:</strong>
    <div class="article-body">
      <%= @article.content %>
    </div>
  </p>

  <% if can? :update, @article %>
    <%= link_to 'Edit this Article', edit_article_path(@article), class:"btn btn-primary" %> | 
  <% end %>
  <%= link_to 'Back to articles', articles_path, class:"btn btn-dark" %><hr>

  <strong><%= @article.comments.kept.count %> Comments <%= link_to "(show table)", article_comments_path(@article) %></strong>
  <div class="comments-list bg-gradient p-3">
    <%= render @article.comments.kept %>
  </div>
  <hr>
  <%= render 'comments/form' %>
</div>
